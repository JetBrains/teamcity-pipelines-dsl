<?xml version="1.0"?>
<assembly>
  <id>plugin-assembly</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <files>
     <file>
         <source>target/teamcity-plugin.xml</source>
         <outputDirectory>/</outputDirectory>
     </file> 
  </files>
  <moduleSets>
    <moduleSet>
       <useAllReactorProjects>true</useAllReactorProjects>
       <includes>
           <include>org.jetbrains.teamcity:teamcity-pipelines-dsl-kotlin</include>
       </includes>
       <binaries>
           <outputDirectory>kotlin-dsl</outputDirectory>
           <unpack>false</unpack>
       </binaries>
    </moduleSet>

  </moduleSets>
</assembly>
